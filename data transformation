import numpy as np
import pandas as pd

# Read data from CSV
df = pd.read_csv('csvfiles/student.csv', header=0)
print(df)

# Select only categorical columns
df_categorical = df.select_dtypes(exclude=np.number)
print(df_categorical)

# Show unique values in "Grade"
x = df_categorical['Grade'].unique()
print(x)

# Count unique values in "Grade" and "Gender"
y1 = df_categorical['Grade'].value_counts()
print(y1)
y2 = df_categorical['Gender'].value_counts()
print(y2)

# Replace string values with numeric codes for ML input
df['Grade'].replace({'1st Class': 1, '2nd Class': 2, '3rd Class': 3}, inplace=True)
df['Employed'].replace({'yes': 1, 'no': 0}, inplace=True)
print(df.head())
